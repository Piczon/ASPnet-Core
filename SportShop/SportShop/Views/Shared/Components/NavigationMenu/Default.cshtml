@model IEnumerable<string>


<a class="btn btn-secondary p-3" style="border-radius: 0"
    asp-action="ListAll"
    asp-controller="Product"
    asp-route-category="">
    Strona główna
</a>

@foreach (string category in Model)
{

    <a class="btn btn-secondary p-3 @(category == ViewBag.SelectedCategory ? "btn-dark": "btn-secondary")" style="border-radius: 0"
        asp-action="List"
        asp-controller="Product"
        asp-route-category="@category">
        @category
    </a>
}