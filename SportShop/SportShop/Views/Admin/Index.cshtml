@model IEnumerable<Product>

@{
    ViewBag.Title = "Edytuj lub usuń";
    Layout = "_AdminLayout";
}

<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">ID</th>
        <th>Produkt</th>
        <th class="text-right">Cena</th>
        <th class="text-center">Akcje</th>
    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td class="text-right">@p.ProductID</td>
            <td>@p.Name</td>
            <td class="text-right">@p.Price.ToString("c")</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-light"
                       asp-route-productId="@p.ProductID">
                        Edytuj
                    </a>
                    <input type="hidden" name="ProductID" value="@p.ProductID" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Usuń
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
<div class="text-center">
    <a asp-action="Create" class="btn btn-primary">Dodaj produkt</a>
</div>